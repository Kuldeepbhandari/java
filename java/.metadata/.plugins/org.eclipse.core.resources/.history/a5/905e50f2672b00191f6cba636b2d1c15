package AssingmentDay1;

public class CheckerBoard {
  public static void show()
  {
	  int size=7;
	  for(int i=0;i<size;i++)
	  {
		  for(int j=0;j<size;j++)
		  {
			  if(i+j%2==0)
			  {
				  System.out.print("1");
				  System.out.print(" 0 ");
				  
			  }
			 /* else if(i+j%2==1)
			  {
				  System.out.print("0");
			  }*/
		  }
	  }
  }
}
