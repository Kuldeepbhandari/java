import java.util.Scanner;


public class MakeMiddle {
public static void makeMiddle(){
	int middle=0;
	Scanner s=new Scanner(System.in);
	  System.out.println("Enter The Arry Length");
	  int[] len=new int[s.nextInt()];
	  int size=len.length;
	System.out.println("Enter the Array elements");
	  int[]temp=new int[len.length];
	for(int i=0;i<len.length;i++){
		temp=new int[s.nextInt()];
	}
	if(size>=2 && size%2==0){
		for(int i=0;i<temp.length;i++){
		 if(temp.length>=2)
		 {
			 middle=temp.length/2;
			 
		 }
		 System.out.println(middle);
		}
	}
	else{
		System.out.println("Plz enter size in even");
	}
	
	}
	
}

